<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_2sdp"
    android:id="@+id/layoutRow">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/favorite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:src="@drawable/ic_unmarked_star"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Station Name"
    android:textSize="@dimen/_16sdp"
    android:id="@+id/stationName"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_marginTop="@dimen/_20sdp"
    android:textColor="@color/colorPrimary"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Station Distance)"
        android:textSize="@dimen/_12sdp"
        android:id="@+id/stationDistance"
        app:layout_constraintLeft_toRightOf="@id/stationName"
        app:layout_constraintBottom_toBottomOf="@id/stationName"
        android:layout_marginLeft="@dimen/_5sdp"
        android:textColor="@color/colorPrimaryDark"/>

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/departureType1"
    app:layout_constraintTop_toTopOf="@id/departureName1"
    app:layout_constraintLeft_toLeftOf="@id/stationName"
    android:src="@drawable/ic_bus"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="@dimen/_12sdp"
        android:id="@+id/departureName1"
        app:layout_constraintLeft_toRightOf="@id/departureType1"
        app:layout_constraintTop_toBottomOf="@id/stationName"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Technopark"
        android:textSize="@dimen/_12sdp"
        android:id="@+id/departureDirection1"
        app:layout_constraintLeft_toRightOf="@id/departureName1"
        app:layout_constraintTop_toBottomOf="@id/stationName"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16:17"
        android:textStyle="bold"
        android:textSize="@dimen/_12sdp"
        android:id="@+id/departureTime1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stationName"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/colorPrimaryDark"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/departureType2"
        app:layout_constraintTop_toTopOf="@id/departureName2"
        app:layout_constraintLeft_toLeftOf="@id/stationName"
        android:src="@drawable/ic_bus"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="@dimen/_12sdp"
        android:id="@+id/departureName2"
        app:layout_constraintLeft_toRightOf="@id/departureType2"
        app:layout_constraintTop_toBottomOf="@id/departureName1"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Technopark"
        android:textSize="@dimen/_12sdp"
        android:id="@+id/departureDirection2"
        app:layout_constraintLeft_toRightOf="@id/departureName2"
        app:layout_constraintTop_toBottomOf="@id/departureName1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17:16"
        android:textStyle="bold"
        android:textSize="@dimen/_12sdp"
        android:id="@+id/departureTime2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/departureTime1"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/colorPrimaryDark"/>

</androidx.constraintlayout.widget.ConstraintLayout>